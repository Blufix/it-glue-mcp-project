# Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# IT Glue API
IT_GLUE_API_KEY=your_itglue_api_key_here
IT_GLUE_API_URL=https://api.itglue.com
IT_GLUE_RATE_LIMIT=100

# Database Configuration
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://itglue_user:postgres_pass@localhost:5432/itglue
POSTGRES_USER=itglue_user
POSTGRES_PASSWORD=postgres_pass
POSTGRES_DB=itglue
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_pass

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=itglue_documents

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-32-characters-long-change-this
API_KEY_HEADER=X-API-Key

# MCP Server
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_WEBSOCKET_PORT=8001

# API Server
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=4

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# OpenAI (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=8000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
SENTRY_DSN=

# Flower (Celery monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=admin
FLOWER_PORT=5555

# MinIO (Optional object storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=itglue-documents

# Performance Settings
CACHE_TTL=300
QUERY_TIMEOUT=30
MAX_CONNECTIONS=100
BATCH_SIZE=100
SYNC_INTERVAL_MINUTES=15

# Feature Flags
ENABLE_CROSS_COMPANY_SEARCH=false
ENABLE_SEMANTIC_SEARCH=true
ENABLE_AI_SUGGESTIONS=false
ENABLE_COMPLIANCE_REPORTING=false
ENABLE_REAL_TIME_SYNC=false

# Development
JUPYTER_TOKEN=jupyter
RELOAD=true
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1